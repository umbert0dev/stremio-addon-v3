{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",

    // Type checking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@mw/*": ["src/middlewares/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "bin",
    "config",
    "src",
    "tests"
  ]
}